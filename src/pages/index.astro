    </div>
  </section>

  <!-- Quick Overview Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6 md:px-8 max-w-6xl">
      <h2 class="text-4xl font-bold text-center mb-12 text-gray-900">Core Competencies</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-gray-50 p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow">
          <h3 class="text-xl font-semibold mb-4 text-blue-600">Languages</h3>
          <p class="text-gray-700">JavaScript (ES6+), Python, Java, Groovy</p>
        </div>
        <div class="bg-gray-50 p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow">
          <h3 class="text-xl font-semibold mb-4 text-green-600">Frameworks</h3>
          <p class="text-gray-700">AngularJS, Google Polymer, ExtJS, jQuery, Spring</p>
        </div>
        <div class="bg-gray-50 p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow">
          <h3 class="text-xl font-semibold mb-4 text-purple-600">Platforms</h3>
          <p class="text-gray-700">ServiceNow, Spring Framework, JEE, Agile/Scrum</p>
        </div>
      </div>
    </div>
  </section>

  <style>
    @keyframes fade-in {
      from {
        opacity: 0;
        transform: translateY(-20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .animate-fade-in {
      animation: fade-in 1s ease-out;
    }
  </style>
</BaseLayout>
