  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-900 via-blue-900 to-gray-900 text-white min-h-screen flex flex-col justify-center items-center">
    <div class="text-center px-6 max-w-5xl mx-auto">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 animate-fade-in">
        Kenneth Frencher
      </h1>
      <p class="text-2xl md:text-3xl mb-4 text-blue-200">
        Full Stack Senior Software Engineer
      </p>
      <p class="text-lg md:text-xl mb-2 text-gray-300">
        Co-Founder of Trivium Software Inc.
      </p>
      <p class="text-lg md:text-xl text-gray-300 mb-10 max-w-3xl mx-auto leading-relaxed">
        Building scalable systems and empowering teams through ServiceNow and web technologies.
        15+ years of experience in full-cycle software development.
      </p>
      <div class="flex flex-wrap justify-center gap-4 mb-12">
        <a href={withBase("/about")} class="px-8 py-4 bg-blue-600 hover:bg-blue-700 rounded-lg font-semibold text-lg transition-all transform hover:scale-105 shadow-lg">
          About Me
        </a>
        <a href={withBase("/projects")} class="px-8 py-4 bg-green-600 hover:bg-green-700 rounded-lg font-semibold text-lg transition-all transform hover:scale-105 shadow-lg">
          Projects
