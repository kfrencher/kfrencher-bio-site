---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";

const projects = [
  {
    title: "ServiceNow KLF Global",
    description: "Script includes that execute in the global scope. These are utilities used across applications with detailed documentation inside each script include.",
    tech: ["JavaScript", "ServiceNow", "Groovy"],
    github: "https://github.com/kfrencher/servicenow-klf-global",
    type: "Library"
  },
  {
    title: "ServiceNow UI Script Loader Component",
    description: "A UI Builder Component that allows UI Scripts to be loaded dynamically, enhancing modularity and performance in ServiceNow applications.",
    tech: ["JavaScript", "ServiceNow", "UI Builder"],
    github: "https://github.com/kfrencher/servicenow-cmp-klf-ui-script-loader",
    type: "Component"
  },
  {
    title: "ServiceNow KLF Utilities",
    description: "General script includes used across projects. Includes brief and detailed descriptions of each utility for enterprise ServiceNow development.",
    tech: ["JavaScript", "ServiceNow"],
    github: "https://github.com/kfrencher/servicenow-klf",
    type: "Library"
  },
  {
    title: "ServiceNow VS Code Starter",
    description: "VS Code configuration for ServiceNow Extension. Configures visibility of files and folders for optimal development workflow with ServiceNow projects.",
    tech: ["JavaScript", "VS Code", "ServiceNow"],
    github: "https://github.com/kfrencher/servicenow-now-vscode-starter",
    type: "Tool"
  }
];
---

<BaseLayout title="Projects - Kenneth Frencher">
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-6 md:px-8 max-w-6xl">
      <h1 class="text-5xl font-bold mb-4 text-gray-900">Projects</h1>
      <p class="text-xl text-gray-600 mb-12">
        A collection of open-source projects and tools I've built, primarily focused on ServiceNow platform development.
      </p>
      
      <div class="grid md:grid-cols-2 gap-8">
        {projects.map(project => (
          <ProjectCard {...project} />
        ))}
      </div>

      <div class="mt-16 bg-white p-8 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-4 text-gray-900">More Projects</h2>
        <p class="text-gray-700 mb-4">
          You can find more of my work and contributions on my GitHub profile. I regularly contribute to 
          open-source projects and maintain various utilities for enterprise development.
        </p>
        <a 
          href="https://github.com/kfrencher" 
          target="_blank" 
          rel="noopener noreferrer"
          class="inline-block px-6 py-3 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition-colors"
        >
          View GitHub Profile â†’
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
