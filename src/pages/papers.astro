---
import BaseLayout from "../layouts/BaseLayout.astro";
import PaperCard from "../components/PaperCard.astro";
import { withBase } from "../utils/paths";

const papers = [
  {
    title: "ServiceNow JSDoc and Dev Tools",
    description: "A comprehensive guide to implementing JSDoc in ServiceNow development and leveraging development tools for better code documentation and maintainability.",
    date: "2023",
    tags: ["ServiceNow", "JSDoc", "Developer Tools", "Documentation"],
    link: withBase("/papers/jsdoc-and-dev-tools")
  },
  {
    title: "Transferring Application Data Between Instances",
    description: "Best practices and strategies for efficiently transferring application data between ServiceNow instances while maintaining data integrity and minimizing downtime.",
    date: "2023",
    tags: ["ServiceNow", "Data Migration", "DevOps"],
    link: withBase("/papers/data-migration")
  },
  {
    title: "How to Scope a Global Application",
    description: "A detailed walkthrough of scoping global applications in ServiceNow, covering namespace management, best practices, and common pitfalls to avoid.",
    date: "2023",
    tags: ["ServiceNow", "Application Development", "Scoping"],
    link: withBase("/papers/scoping-global-app")
  },
  {
    title: "Strategies for Using ServiceNow Automated Test Framework (ATF)",
    description: "This paper explores best practices for implementing ATF in enterprise environments, covering modular test design, reproducibility, and integration with CI/CD pipelines.",
    date: "2023",
    tags: ["ServiceNow", "Testing", "Automation", "ATF", "CI/CD"],
    link: withBase("/papers/atf-strategies")
  }
];
---

<BaseLayout title="Technical Papers - Kenneth Frencher">
  <section class="py-16 bg-white">
    <div class="container mx-auto px-6 md:px-8 max-w-6xl">
      <h1 class="text-5xl font-bold mb-4 text-gray-900">Technical Papers</h1>
      <p class="text-xl text-gray-600 mb-12">
        In-depth articles on implementation strategies, best practices, and technical solutions 
        for ServiceNow development and enterprise software engineering.
      </p>
      
      <div class="space-y-6">
        {papers.map(paper => (
          <PaperCard {...paper} />
        ))}
      </div>

      <div class="mt-16 bg-blue-50 border-l-4 border-blue-600 p-8">
        <h2 class="text-2xl font-bold mb-4 text-gray-900">Sharing Knowledge</h2>
        <p class="text-gray-700">
          I believe in sharing knowledge and contributing to the developer community. These papers 
          represent real-world solutions to common challenges in enterprise software development, 
          particularly in the ServiceNow ecosystem.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
