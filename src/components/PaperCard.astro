---
const { title, description, date, tags, link } = Astro.props;
---

<article class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 p-6 md:p-8 border border-gray-200">
  <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-4">
    <h3 class="text-2xl font-bold text-gray-900 mb-2 md:mb-0">{title}</h3>
    {date && (
      <span class="text-gray-500 text-sm font-medium">{date}</span>
    )}
  </div>
  
  <p class="text-gray-700 mb-4 leading-relaxed">{description}</p>
  
  <div class="flex flex-wrap gap-2 mb-4">
    {tags.map((tag: string) => (
      <span class="px-3 py-1 bg-purple-100 text-purple-800 text-sm rounded-md">
        {tag}
      </span>
    ))}
  </div>
  
  {link && (
    <a 
      href={link}
      class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium"
    >
      Read full article
      <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
      </svg>
    </a>
  )}
</article>
